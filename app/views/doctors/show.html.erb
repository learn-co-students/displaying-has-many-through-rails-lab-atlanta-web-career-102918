<h1>Doctor: <%= @doctor.name %></h1>

<h3>Department: <%= @doctor.department %></h3>
<h3>Total Patients: <%= @doctor.patient_count %></h3>

<h3>Appointments</h3>
<% @doctor.appointments.each do |appointment| %>
  <ul>
    <li><%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
      <ul>
        <li>Time: <%= appointment.appointment_datetime %></li>
      </ul>
  </ul>
<% end %>
